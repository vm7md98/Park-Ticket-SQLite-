                            android:layout_marginBottom="5dp"
                            android:background="@drawable/btnadd"
                            android:gravity="center"
                            android:onClick="booking3"
                            android:text="@string/booking"
                            android:textColor="#FFF"
                            tools:ignore="OnClick" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/fream"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="347dp"
                            android:layout_height="162dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/almajazsplashpark" />

                        <TextView
                            android:id="@+id/txv_tp_four"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:drawableLeft="@drawable/ic_baseline_access_time_24"
                            android:drawablePadding="2dp"
                            android:text="@string/open_24_hours"
                            android:textColor="#FF0000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txv_lp_four"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_baseline_location_on_24"
                            android:onClick="map4"
                            android:text="@string/al_majaz_splash_park"
                            android:textColor="#1E88E5"
                            android:textSize="14sp"
                            tools:ignore="OnClick" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txv_php_four"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="125dp"
                                android:layout_marginLeft="125dp"
                                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                                android:text="06 511 7000"
                                android:textColor="@color/green_p"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txvd4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
